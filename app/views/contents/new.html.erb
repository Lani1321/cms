<div class="container-fluid">
  <div class="row align-items-center">
    
    <h2>Add New Content</h2>

    <%= render 'form', content: @content %>

   <!--  Set contents here because if a title is missing upon creation, it throws an error bc @contents = nil -->
    <% @contents = Content.all %>
    <% @contents.each do |content| %>
      <h2><%= link_to 'Edit Existing Content', edit_content_path(content) %></h2>
    <% end %>

  </div>
</div>